<div class="column">
  <div class="card">
    <div class="card-content">
      <% if customer.image.present? %>
      <div class="card-image">
        <figure class="image">
          <%= image_tag(customer.image.variant(resize_to_limit: [800, 800])) %>
        </figure>
      </div>
      <% end %>
      <div>
        <h3><%= customer.full_name %></h3>
        <p><strong>Phone:</strong> <%= customer.phone_number %></p>
        <p><strong>Email:</strong> <%= customer.email.presence || 'N/A' %></p>
        <p><strong>Notes:</strong> <%= customer.notes %></p>
      </div>
    </div>
  </div>
</div>
